    <script>
        $(document).ready(function () {
            $('#searchInput').on('input', function () {
                var searchTerm = $(this).val();
                if (searchTerm.length >= 3) {
                    $.ajax({
                        url: '/Home/Search',
                        type: 'POST',
                        data: { searchTerm: searchTerm },
                        success: function (data) {
                            var searchResultsContainer = $('.searchedproductscontainer');
                            searchResultsContainer.empty();

                            if (data.length === 0) {
                                searchResultsContainer.append('<p>No products found.</p>');
                            } else {
                                data.forEach(function (product) {
                                    var productHtml = `
                                            <a href="/Product/Detail/${product.id}" class="searchedproducts">
                                                <div class="searchedproductimgbox">
                                                    <img src="${product.imageUrl}" alt="${product.name}">
                                                </div>
                                                <div class="searchedproductinfobox">
                                                    <h5>${product.name}</h5>
                                                    <span>$${product.sellPrice.toFixed(2)}</span>
                                                </div>
                                            </a>
                                        `;
                                    searchResultsContainer.append(productHtml);
                                });
                            }
                        },
                        error: function () {
                            alert('Error occurred while searching. Please try again.');
                        }
                    });
                } else {
                    $('.searchedproductscontainer').empty();
                }
            });
        });
    </script>

    
