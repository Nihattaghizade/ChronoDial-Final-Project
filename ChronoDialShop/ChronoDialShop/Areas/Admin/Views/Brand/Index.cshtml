@model List<Brand>

<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Brands</h6>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-white">
                        <th scope="col">Brand Name</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var brand in Model)
                    {
                        <tr>
                            <td>@brand.Name</td>
                            <td><a class="btn btn-sm btn-primary" asp-controller="Brand" asp-action="Delete" asp-route-id="@brand.Id">Delete</a></td>
                            <td><a class="btn btn-sm btn-warning" asp-controller="Brand" asp-action="Edit" asp-route-id="@brand.Id">Edit</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>