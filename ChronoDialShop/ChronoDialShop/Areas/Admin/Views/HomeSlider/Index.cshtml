@model List<HomeSlider>

<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Products</h6>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-white">
                        <th scope="col">HomeSlider Image</th>
                        <th scope="col">HomeSlider Name</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            @* <td><img width="100" src="~/client/image/homeslider/@(product.SliderImages.FirstOrDefault(x => x.IsMain).Url)" /></td> *@
                            <td>@product.Name</td>
                            <td><a class="btn btn-sm btn-primary" asp-controller="HomeSlider" asp-action="Delete" asp-route-id="@product.Id" asp-area="Admin">Delete</a></td>
                            <td><a class="btn btn-sm btn-warning" asp-controller="HomeSlider" asp-action="Edit" asp-route-id="@product.Id" asp-area="Admin">Edit</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>