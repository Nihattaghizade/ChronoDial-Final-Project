@using ChronoDialShop.Services
@inject ILayoutService service;
@{
    var dto = await service.GetUser();
    string fullname = dto.FullName;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>DarkPan - Bootstrap 5 Admin Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="~/admin/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/admin/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/admin/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/admin/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/admin/css/style.css" rel="stylesheet">
</head>

<body>
    <div class="container-fluid position-relative d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-secondary navbar-dark">
                <a asp-action="Index" asp-controller="Dashboard" asp-area="Admin" class="navbar-brand mx-4 mb-3">
                    @*<h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>DarkPan</h3>*@
                    <img src="~/client/image/logo/chronodiallogo.webp" style="width: 200px;" />
                </a>
                <div class="navbar-nav w-100">
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-table me-2"></i>Brand</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a asp-controller="Brand" asp-action="Index" class="dropdown-item">Brands List</a>
                            <a asp-controller="Brand" asp-action="Create" class="dropdown-item">Brand Create</a>
                        </div>
                    </div>

                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-table me-2"></i>Vendor</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a asp-controller="Vendor" asp-action="Index" class="dropdown-item">Vendor List</a>
                            <a asp-controller="Vendor" asp-action="Create" class="dropdown-item">Vendor Create</a>
                        </div>
                    </div>

                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-table me-2"></i>Products</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a asp-controller="Product" asp-action="Index" class="dropdown-item">Product List</a>
                            <a asp-controller="Product" asp-action="Create" class="dropdown-item">Product Create</a>
                        </div>
                    </div>

                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-table me-2"></i>Size</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a asp-controller="Size" asp-action="Index" class="dropdown-item">Size List</a>
                            <a asp-controller="Size" asp-action="Create" class="dropdown-item">Size Create</a>
                        </div>
                    </div>

                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-table me-2"></i>ProductSize</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a asp-controller="ProductSize" asp-action="Index" class="dropdown-item">ProductSize List</a>
                            <a asp-controller="ProductSize" asp-action="Create" class="dropdown-item">ProductSize Create</a>
                        </div>
                    </div>

                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-table me-2"></i>Visualization</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a asp-controller="Visualization" asp-action="Index" class="dropdown-item">Visualization List</a>
                            <a asp-controller="Visualization" asp-action="Create" class="dropdown-item">Visualization Create</a>
                        </div>
                    </div>

                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-table me-2"></i>BandType</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a asp-controller="BandType" asp-action="Index" class="dropdown-item">BandType List</a>
                            <a asp-controller="BandType" asp-action="Create" class="dropdown-item">BandType Create</a>
                        </div>
                    </div>

                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-table me-2"></i>InnerColor</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a asp-controller="InnerColor" asp-action="Index" class="dropdown-item">InnerColor List</a>
                            <a asp-controller="InnerColor" asp-action="Create" class="dropdown-item">InnerColor Create</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <!-- Sidebar End -->
        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <nav class="navbar navbar-expand bg-secondary navbar-dark sticky-top px-4 py-0">
                <a href="index.html" class="navbar-brand d-flex d-lg-none me-4">
                    <h2 class="text-primary mb-0"><i class="fa fa-user-edit"></i></h2>
                </a>
                <a href="#" class="sidebar-toggler flex-shrink-0">
                    <i class="fa fa-bars"></i>
                </a>
                <div class="navbar-nav align-items-center ms-auto">
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            <span class="d-none d-lg-inline-flex">@fullname</span>
                        </a>
                    </div>
                </div>
            </nav>
            <!-- Navbar End -->

            <!-- Start of Main Content -->
            @RenderBody()
            <!-- End of Main Content -->

           
        </div>
        <!-- Content End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/lib/chart/chart.min.js"></script>
    <script src="~/admin/lib/easing/easing.min.js"></script>
    <script src="~/admin/lib/waypoints/waypoints.min.js"></script>
    <script src="~/admin/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/admin/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/admin/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/admin/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/admin/js/main.js"></script>
</body>

</html>